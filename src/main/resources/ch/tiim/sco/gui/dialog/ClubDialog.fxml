<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity" prefWidth="467.0" xmlns="http://javafx.com/javafx/8.0.40"
          fx:controller="ch.tiim.sco.gui.dialog.ClubDialog">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TextField fx:id="name" promptText="Name"/>
        <TextField fx:id="nameShort" promptText="Short Name" GridPane.rowIndex="1"/>
        <TextField fx:id="nameEn" promptText="Name English" GridPane.rowIndex="2"/>
        <TextField fx:id="nameShortEn" promptText="Short English Name" GridPane.rowIndex="3"/>
        <ChoiceBox fx:id="country" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="code" promptText="Club Code" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Spinner fx:id="externid" editable="true" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                 GridPane.rowIndex="3"/>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2"
              GridPane.rowIndex="4">
            <children>
                <Button mnemonicParsing="false" onAction="#onSave" text="Save"/>
                <Button mnemonicParsing="false" onAction="#onCancel" text="Cancel"/>
            </children>
        </HBox>
    </children>
</GridPane>
