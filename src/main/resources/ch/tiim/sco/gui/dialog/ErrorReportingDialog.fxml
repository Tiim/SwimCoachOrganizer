<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" prefHeight="502.0" prefWidth="666.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.tiim.sco.gui.dialog.ErrorReportingDialog">
   <children>
      <Label text="%gui.error.data" />
      <Label text="%gui.error.instruction" />
      <TextArea fx:id="data" editable="false" prefHeight="200.0" prefWidth="200.0" styleClass="crash-text-area" VBox.vgrow="ALWAYS" />
      <Label text="%gui.error.comment" />
      <TextArea fx:id="input" prefHeight="106.0" prefWidth="608.0" />
      <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancel" text="%gui.cancel" />
            <Button mnemonicParsing="false" onAction="#onReport" text="%gui.report" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
