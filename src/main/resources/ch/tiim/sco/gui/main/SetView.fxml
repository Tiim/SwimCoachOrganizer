<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" dividerPositions="0.25"
           xmlns="http://javafx.com/javafx/8.0.40" fx:controller="ch.tiim.sco.gui.main.SetView">
    <items>
        <ListView fx:id="sets" prefHeight="200.0" prefWidth="200.0"/>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <center>
                <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="name" text="name"/>
                        <Label fx:id="distance" text="distance" GridPane.rowIndex="1"/>
                        <Label fx:id="intensity" text="intensity" GridPane.columnIndex="1"/>
                        <Label fx:id="focus" text="focus" GridPane.rowIndex="2"/>
                        <Label fx:id="stroke" text="stroke" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label fx:id="time" text="time" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="content" editable="false" GridPane.columnSpan="2" GridPane.rowIndex="3"/>
                        <TextArea fx:id="notes" editable="false" prefHeight="200.0" prefWidth="200.0"
                                  GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4"
                                  GridPane.vgrow="ALWAYS"/>
                    </children>
                </GridPane>
            </center>
        </BorderPane>
    </items>
</SplitPane>
